<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net6.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AnalysisMode>Recommended</AnalysisMode>
    <LangVersion>11</LangVersion>
    <AssemblyName>RustyOptions</AssemblyName>
    <Version>0.3.0</Version>
    <PackageId>RustyOptions</PackageId>
    <Authors>Joel Mueller</Authors>
    <Company></Company>
    <PackageDescription>Option and Result types for C#, inspired by Rust</PackageDescription>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/jtmueller/RustyOptions</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <ReleaseVersion>0.2</ReleaseVersion>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(TargetFramework)' == 'Debug|net6.0' ">
    <DocumentationFile>bin/Debug/net6.0/RustyOptions.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(TargetFramework)' == 'Debug|net7.0' ">
    <DocumentationFile>bin/Debug/net7.0/RustyOptions.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(TargetFramework)' == 'Release|net6.0' ">
    <DocumentationFile>bin/Release/net6.0/RustyOptions.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(TargetFramework)' == 'Release|net7.0' ">
    <DocumentationFile>bin/Release/net7.0/RustyOptions.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Async\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Async\" />
  </ItemGroup>
</Project>
